#include <iostream> // To use input and output // Biplab Borah
using namespace std;

int main() {
    int n;



    // Ask the user how many numbers they want to enter
    cout << "Enter the number of elements in the array: ";
    cin >> n;

    int arr[n]; // Declare an array of size n

    // Input elements into the array
    cout << "Enter " << n << " numbers:\n";
    for (int i = 0; i < n; i++) {
        cout << "Element " << i + 1 << ": ";
        cin >> arr[i];
    }

    // ===== Bubble Sort for Ascending Order =====
    for (int i = 0; i < n - 1; i++) {
        // Loop to compare array elements
        for (int j = 0; j < n - i - 1; j++) {
            // If current element is greater than next, swap them
            if (arr[j] > arr[j + 1]) {
                int temp = arr[j];      // Temporary variable for swapping
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }

    // Display array in Ascending Order
    cout << "\nArray in Ascending Order: ";
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }

    // ===== Bubble Sort for Descending Order =====
    for (int i = 0; i < n - 1; i++) {
        // Loop to compare array elements
        for (int j = 0; j < n - i - 1; j++) {
            // If current element is smaller than next, swap them
            if (arr[j] < arr[j + 1]) {
                int temp = arr[j];      // Temporary variable for swapping
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }

    // Display array in Descending Order
    cout << "\nArray in Descending Order: ";
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }

    cout << endl;
    return 0;
}
